import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;

public class DemoTransaction {

	public static void main(String[] args) throws ClassNotFoundException, SQLException {
		// TODO Auto-generated method stub
		
		Class.forName("com.microsoft.sqlserver.jdbc.SQLServerDriver");
		Connection con = DriverManager.getConnection("jdbc:sqlserver://localhost:1433;databaseName=CITI","sa" , "sa123");
		System.out.println("Connection Successful");
		Statement statement=con.createStatement();
		statement.executeUpdate("Insert into employee value(12,'sds','sdsdsds')");
		statement.executeUpdate("Insert into employee value(1,'sqqds','sqrdvdsdsds')");
	}

}
